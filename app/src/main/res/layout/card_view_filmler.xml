<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardViewHeight"
        android:layout_marginBottom="@dimen/cardViewAltBosluk"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintEnd_toEndOf="@+id/txtButce"
            app:layout_constraintStart_toEndOf="@+id/txtButce">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/cardViewIcerikResimWitdth"
                android:layout_height="@dimen/cardViewIcerikResimHeight"
                android:layout_marginStart="@dimen/cardViewIcerikResimBosluk"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@color/teal_700" />

            <TextView
                android:id="@+id/txtButceIsmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardViewIcerikTextMarginStart"
                android:layout_marginTop="@dimen/cardViewIcerikTextMarginTop"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/imgLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtFilmTuru"
                android:text="@string/filmButce"
                tools:text="FilmBütçe" />

            <TextView
                android:id="@+id/txtFilmAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardViewIcerikTextMarginStart"
                android:layout_marginTop="@dimen/cardViewIcerikTextMarginTop"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/imgLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtFilmIsim"
                tools:text="Adi" />

            <TextView
                android:id="@+id/txtFilmIsim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardViewIcerikTextMarginStart"
                android:layout_marginTop="@dimen/cardViewIcerikBaslangicTextMarginTop"
                android:text="@string/filmAdi"
                android:textColor="@color/white"

                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imgLogo"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="FilmAdi" />

            <TextView
                android:id="@+id/txtFilmTuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardViewIcerikTextMarginStart"
                android:layout_marginTop="@dimen/cardViewIcerikTextMarginTop"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/imgLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtFilmTuruIsmi"
                android:text="@string/filmTuru"
                tools:text="Turu" />

            <TextView
                android:id="@+id/txtFilmTuruIsmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardViewIcerikTextMarginStart"
                android:layout_marginTop="@dimen/cardViewIcerikTextMarginTop"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/imgLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtFilmAdi"
                android:text="@string/filmTuru"

                tools:text="FilmTürü" />

            <TextView
                android:id="@+id/txtButce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardViewIcerikTextMarginStart"
                android:layout_marginTop="@dimen/cardViewIcerikTextMarginTop"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/imgLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtButceIsmi"
                tools:text="Butce" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>